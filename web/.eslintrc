{
  "extends": "airbnb",
  "rules": {
    "semi": [2, "never"],
    "react/jsx-filename-extension": ["error", { "extensions": [".js", ".jsx"] }],
    "react/forbid-prop-types": ["error", { "forbid": [] }],
    "react/no-array-index-key": 0,
    "react/require-default-props": 0,
    "no-underscore-dangle": ["error", { "allow": ["_id", "_Component"] }],
    "jsx-a11y/no-static-element-interactions": ["error", { "handlers": ["onClick"] }]
  },
  "globals": {
    "navigator": true,
    "document": true,
    "window": true,
    "require": true
  }
}
